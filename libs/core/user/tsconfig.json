{
  "extends": "../../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["jest", "node"],
    "paths": {
      "@aiofix/user/*": ["src/*"],
      "@aiofix/shared": ["../../shared/src"],
      "@aiofix/database/*": ["../../database/src/*"],
      "@aiofix/iam/*": ["../iam/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
